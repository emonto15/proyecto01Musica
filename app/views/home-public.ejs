<%include header%>
<div style="float: left; padding-right: 10%; padding-bottom: 3%">
  <form action="" style="display: inline; float: left">
    <label>Buscar por Titulo:</label><input name="term" placeholder="buscar">
    <input type="submit" value="buscar" hidden>
  </form>
</div>
<div style="float: right; padding-right: 10%; display: inline;">
  <form action="<%=uri%>" style="display: inline">
    <button style="float:right;"><%=text%></button>
  </form>
  <br/>
</div>
<div>
  <h2 align="center" style="padding-bottom: 2%; padding-top: 2%; display: inline-block"><%=searchBy%></h2>
</div>
<div style="display: inline; float: right; padding-right: 10%; padding-bottom: 3%">
  <br/>
</div>
<%if(songs.length>0){%>
<table width="90%" >
  <tr style="border: 2px solid black">
    <th>Titulo</th>
    <th>Artista</th>
    <th>Album</th>
    <th>Genero</th>
  </tr>
  <tbody align="center">
  <%if(songs.length>0){%>
  <%for(var song in songs){%>
  <tr>
    <td><%=songs[song].title%></td>
    <td><%=songs[song].artist%></td>
    <td><%=songs[song].album%></td>
    <td><%=songs[song].genre%></td>
  </tr>
  <%}
  }%>
  </tbody>
</table>
<%}else{%>
<h2><%=message%></h2>
<%}%>

<%include footer%>
